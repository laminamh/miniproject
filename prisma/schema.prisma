datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          Int          @id @default(autoincrement())
  email       String       @unique
  password    String
  name        String
  enrollments Enrollment[] // Relaci칩n con los cursos a los que est치 inscrito
}

model Course {
  id          Int          @id @default(autoincrement())
  title       String
  description String
  startDate   DateTime
  endDate     DateTime
  enrollments Enrollment[] // Relaci칩n con los usuarios inscritos
}

model Enrollment {
  id       Int    @id @default(autoincrement())
  userId   Int
  courseId Int
  user     User   @relation(fields: [userId], references: [id])
  course   Course @relation(fields: [courseId], references: [id])

  // Impide que un usuario se inscriba m치s de una vez al mismo curso
  @@unique([userId, courseId])
}
